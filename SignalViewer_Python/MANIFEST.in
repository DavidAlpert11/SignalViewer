# MANIFEST.in - Include additional files in the package

include README.md
include LICENSE
include requirements.txt
include requirements-dev.txt

# Include assets
recursive-include assets *.css
recursive-include assets *.js
recursive-include assets *.min.css
recursive-include assets *.min.js
recursive-include assets *.woff
recursive-include assets *.woff2
recursive-include assets *.ttf

# Include documentation
recursive-include docs *.md
recursive-include docs *.png
recursive-include docs *.jpg

# Exclude unnecessary files
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__
global-exclude *.so
global-exclude .DS_Store
